pipe:
  - type: query
    statement: >-
      SELECT {{#each properties}}"{{ nameSnake }}"{{~#unless @last}},{{/unless}}{{/each}} 
      FROM "{{nameSnake}}" where "id" = $1;
    params:
      - params.id
    resultType: row
    assign: Single{{ name }}
returnVar: Single{{ name }}
transactional: false